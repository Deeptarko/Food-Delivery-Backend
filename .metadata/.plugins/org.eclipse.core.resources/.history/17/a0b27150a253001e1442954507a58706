spring:
 cloud:
   gateway:
     routes:
       - id: order-service
         uri: lb://ORDER-SERVICE
         predicates:
           - Path=/order/**
         filters:
           - AuthenticationFilter
           
           
       - id: auth-service
         uri: lb://AUTH-SERVICE
         predicates:
           - Path=/auth/**
       
 application:
   name: FOODKA-GATEWAY

     
eureka:
  client:
    service-url:
      defaultZone : http://localhost:8761/eureka/